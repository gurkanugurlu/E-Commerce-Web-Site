                                @try
                                {
                                    foreach (var puan in (Dictionary<double, double>)ViewBag.UrunPuan)
                                    {
                                        if (puan.Key == Model.urunId)
                                        {
                                            for (int i = 1; i <= puan.Value; i++)
                                            {
                                                <li>
                                                    <a href="#">
                                                        <i class="fas fa-star" style="font-size:25px"></i>
                                                    </a>
                                                </li>


                                            }
                                        }

                                        else
                                        {

                                        }
                                        if (puan.Key == Model.urunId)
                                        {
                                            if ((puan.Value == 1.5 || puan.Value == 2.5) || (puan.Value == 3.5 || puan.Value == 4.5))
                                            {
                                                <li>
                                                    <a href="#">
                                                        <i class="fas fa fa-star-half" style="font-size:25px"></i>

                                                    </a>
                                                </li>

                                            }
                                            <li style="font-size:25px;">@puan.Value</li>

                                        }



                                    }


                                }
                                catch (Exception)
                                {

                                }

                            </ul>
                        </div>
                        <div class="description">
