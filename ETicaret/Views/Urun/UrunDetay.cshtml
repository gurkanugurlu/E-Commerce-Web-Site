                            @if (Model.urunKampanyaVarMı == true)
                            {
                                <span class="money "><span class="badge badge-info" style="font-size:16px"><del>@Model.urunEskiFiyat .00 TL</del></span></span> <span class="money "> <span class="badge badge-warning" style="font-size:16px">@Model.urunFiyat .00 TL</span></span>
                            }
