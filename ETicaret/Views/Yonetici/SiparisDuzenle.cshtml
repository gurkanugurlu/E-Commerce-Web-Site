@using ETicaret.Models
@using ETicaret.Settings
@using ETicaret.Models.ModelsView
@model Siparis
@{
    ViewBag.Title = "SiparisDuzenle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}


@using (Html.BeginForm("SiparisDuzenle", "Yonetici", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="card-body">

        @if (ViewData["Hata"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                @ViewData["Hata"]
            </div>
        }

        @Html.ValidationSummary()

        <div class="form-group">
            <label>Toplam Fiyat(TL Cinsinden)</label>
            @Html.TextBoxFor(x => x.toplamFiyat, new { @class = "form-control", placeholder = "Toplam Fiyat giriniz" }) 
            @*@Html.ValidationMessageFor(x=> x.ad)*@
        </div>

        

        <div class="form-group">
            <label>Sipariş Durum</label>
            @Html.DropDownList("siparisDurumId", (SelectList)ViewBag.Durum,"Seçiniz...", new { @class = "form-control" })
        </div>


        
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
}