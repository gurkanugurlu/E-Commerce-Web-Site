@using ETicaret.Models

@{
    ViewBag.Title = "KampanyaSec";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}



<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Kampanya Olustur</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("KampanyaSec", "Yonetici", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="card-body">

            @if (ViewData["Hata"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                    <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                    @ViewData["Hata"]
                </div>
            }

            @Html.ValidationSummary()

            <div class="form-group">
                <label>Kampanya Türü</label>
                @Html.DropDownList("kampanyaTurId", (SelectList)ViewBag.Tur, "Seçiniz...", new { @class = "form-control" })
            </div>
          
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Devam Et</button>
        </div>
    }
</div>