@using ETicaret.Models;
@model Kategori
@{
    ViewBag.Title = "KategorilerEkle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Kategori Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("KategorilerEkle", "Yonetici", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="card-body">

            @if (ViewData["Hata"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                    <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                    @ViewData["Hata"]
                </div>
            }

            @Html.ValidationSummary()

            <div class="form-group">
                <label>Kategori Adı</label>
                @Html.TextBoxFor(x => x.kategoriAd, new { @class = "form-control", placeholder = "Kategori Adı Giriniz" })
                @*@Html.ValidationMessageFor(x=> x.ad)*@
            </div>

            <div class="form-group">
                <label>Kategori Tanım</label>
                @Html.TextBoxFor(x => x.kategoriTanim, new { @class = "form-control", placeholder = "Kategori Tanımını giriniz" })
                @*@Html.ValidationMessageFor(x => x.soyad)*@
            </div>

            

            <div class="form-group">
                <label>Kategori Resim</label>
                <input type="file" name="resimGelen" class="form-control" placeholder="Eklenecek resimi giriniz...">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>
