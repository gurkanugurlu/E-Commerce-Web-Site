                                @foreach (var s in (List<Siparis>)ViewBag.Sipariss)
                                {
                                    <tr>
                                        <td>
                                            @s.siparisId

                                        </td>
                                        <td>@s.kullaniciId</td>
                                        <td>

                                            @s.Kullanici.kullaniciAd
                                        </td>

                                        <td>
                                            @if (s.siparisDurumId == 1)
                                            {
                                                <span class="badge badge-info">@s.SiparisDurum.siparisDurum1</span>
                                            }
                                            else if (s.siparisDurumId == 2)
                                            {
                                                <span class="badge badge-success">@s.SiparisDurum.siparisDurum1</span>
                                            }
                                            else if (s.siparisDurumId == 3)
                                            {
                                                <span class="badge badge-danger">@s.SiparisDurum.siparisDurum1</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">@s.SiparisDurum.siparisDurum1</span>
                                            }
                                        </td>

