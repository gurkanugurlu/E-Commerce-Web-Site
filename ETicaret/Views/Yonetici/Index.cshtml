                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-warning" style="width: @(Model.Sayilar.markaSayisi*5)%"></div>
                                    </div>
                                </div>
                                <!-- /.progress-group -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- ./card-body -->
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-3 col-6">
                                <div class="description-block border-right">
                                    <span class="description-percentage text-success"><i class="fa fa-caret-up"></i> </span>
                                    <h5 class="description-header">@Model.Sayilar.toplamFiyat TL</h5>
                                    <span class="description-text">TOPLAM KAZANÇ</span>
                                </div>
                                <!-- /.description-block -->
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-3 col-6">
                                <div class="description-block border-right">
                                    <span class="description-percentage text-warning"><i class="fa fa-caret-left"></i></span>
                                    <h5 class="description-header">@(Model.Sayilar.toplamFiyat/3) TL</h5>
                                    <span class="description-text">TOPLAM HARCAMALAR</span>
                                </div>
                                <!-- /.description-block -->
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-3 col-6">
                                <div class="description-block border-right">
                                    <span class="description-percentage text-success"><i class="fa fa-caret-up"></i></span>
                                    <h5 class="description-header">@(Model.Sayilar.toplamFiyat-(Model.Sayilar.toplamFiyat/3)) TL</h5>
                                    <span class="description-text">TOPLAM KAR</span>
                                </div>
                                <!-- /.description-block -->
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-3 col-6">
                                <div class="description-block">
                                    <span class="description-percentage text-danger"><i class="fa fa-caret-down"></i></span>
                                    <h5 class="description-header">4</h5>
                                    <span class="description-text">TAMAMLANAN HEDEFLER</span>
                                </div>
                                <!-- /.description-block -->
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
