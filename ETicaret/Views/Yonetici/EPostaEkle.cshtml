@using ETicaret.Models;

@model  EpostaYayınla
@{
    ViewBag.Title = "EPostaEkle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Kategori Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("EPostaEkle", "Yonetici", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="card-body">

            @if (ViewData["Hata"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                    <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                    @ViewData["Hata"]
                </div>
            }

            @Html.ValidationSummary()

            <div class="form-group">
                <label>E-Posta Konu</label>
                @Html.TextBoxFor(x => x.ePostaKonu, new { @class = "form-control", placeholder = "Eposta Konusu Giriniz" })
                @*@Html.ValidationMessageFor(x=> x.ad)*@
            </div>

            <div class="form-group">
                <label>E-Posta İçerik</label>
                @Html.TextAreaFor(x => x.ePostaIcerik, new { @class = "form-control", placeholder = "E posta İçerik giriniz" })
                @*@Html.ValidationMessageFor(x => x.soyad)*@
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
    }
</div>