@using ETicaret.Models;
@model Urun



@{
    ViewBag.Title = "UrunDuzenle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Ürün Düzenle</h3>
    </div>

    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("UrunDuzenle", "Yonetici", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="card-body">

        @if (ViewData["Hata"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                @ViewData["Hata"]
            </div>
        }

        @Html.ValidationSummary()

        <div class="form-group">
            <label>Urun Adı</label>
            @Html.TextBoxFor(x => x.urunAd, new { @class = "form-control", placeholder = "Urun Adı Giriniz" })
            @*@Html.ValidationMessageFor(x=> x.ad)*@
        </div>
        <div class="form-group">
            <label>Altkategorisi</label>
            @Html.DropDownList("altKategoriId", (SelectList)ViewBag.AltKategoriler, "Seçiniz...", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Markalar</label>
            @Html.DropDownList("markaId", (SelectList)ViewBag.Markalar, "Seçiniz...", new { @class = "form-control" })
        </div>


        <div class="form-group">
            <label>Yaş Aralığı </label>
            @Html.TextBoxFor(x => x.urunYas, new { @class = "form-control", placeholder = "Urun Yaşını Giriniz" })
            @*@Html.ValidationMessageFor(x=> x.ad)*@
        </div>
        <div class="form-group">
            <label>Stok Sayısı </label>
            @Html.TextBoxFor(x => x.urunStokSayisi, new { @class = "form-control", placeholder = "Stok Sayısını Giriniz" })
            @*@Html.ValidationMessageFor(x=> x.ad)*@
        </div>
        <div class="form-group">
            <label>Boyut </label>
            @Html.TextBoxFor(x => x.urunBoyut, new { @class = "form-control", placeholder = "Urun Boyutunu Giriniz" })
            @*@Html.ValidationMessageFor(x=> x.ad)*@
        </div>
        <div class="form-group">
            <label>Renk </label>
            @Html.TextBoxFor(x => x.urunRenk, new { @class = "form-control", placeholder = "Urun Rengini Giriniz" })
            @*@Html.ValidationMessageFor(x=> x.ad)*@
        </div>
        <div class="form-group">
            <label>Tanım </label>
            @Html.TextBoxFor(x => x.urunTanim, new { @class = "form-control", placeholder = "Urun Tanımını Giriniz" })
            @*@Html.ValidationMessageFor(x=> x.ad)*@
        </div>
        <div class="form-group">
            <label>Fiyat </label>
            @Html.TextBoxFor(x => x.urunFiyat, new { @class = "form-control", placeholder = "Urun Fiyatını Giriniz(Fiyatları Tl üzerinden giriniz...)" })
            @*@Html.ValidationMessageFor(x=> x.ad)*@
        </div>


        <div class="form-group">
            <label>Urun Resim</label>
            <input type="file" name="resimGelen" class="form-control" placeholder="Eklenecek resimi giriniz...">
        </div>
    </div>
  
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
    </div>
