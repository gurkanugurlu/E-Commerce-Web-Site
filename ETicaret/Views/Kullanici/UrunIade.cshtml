@using ETicaret.Models
@model List<Siparis>
@{
    ViewBag.Title = "UrunIade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("resimDiv")

<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Toys Shop an Ecommerce Category Bootstrap Responsive Web Template | Home :: w3layouts</title>
    <!--meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="Toys Shop Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
         Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
         addEventListener("load", function () {
         	setTimeout(hideURLbar, 0);
         }, false);

         function hideURLbar() {
         	window.scrollTo(0, 1);
         }
    </script>

    <!--//meta tags ends here-->
    <!--booststrap-->

    <link href="~/Content/Tema/web/css/bootstrap.min.css" rel="stylesheet" type="text/css" media="all">
    <!--//booststrap end-->
    <!-- font-awesome icons -->
    <link href="~/Content/Tema/web/css/fontawesome-all.min.css" rel="stylesheet" type="text/css" media="all">
    <!-- //font-awesome icons -->
    <!--Shoping cart-->
    <link rel="stylesheet" href="~/Content/Tema/web/css/shop.css" type="text/css" />
    <!--//Shoping cart-->
    <!--checkout-->
    <link rel="stylesheet" type="text/css" href="~/Content/Tema/web/css/checkout.css">
    <!--//checkout-->
    <!--stylesheets-->
    <link href="~/Content/Tema/web/css/style.css" rel='stylesheet' type='text/css' media="all">
    <!--//stylesheets-->
    <link href="//fonts.googleapis.com/css?family=Sunflower:500,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet">
</head>
<body>
    <section class="checkout py-lg-4 py-md-3 py-sm-3 py-3">
        <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
            <div class="shop_inner_inf">
                <div class="privacy about">
                    <h3>Sipariş <span>Özeti</span></h3>
                    <div class="checkout-right">
                        <h4><b><img src="~/Content/Resimler/Kullanici/like.png" />  Siparişleriniz</b></h4>

                        @if (Model.Count == 0)
                        {
                            <section class="checkout py-lg-4 py-md-3 py-sm-3 py-3" style="text-align:center">
                                <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
                                    <div class="shop_inner_inf">
                                        <div class="privacy about">

                                            <div class="checkout-right">
                                                <h1>Daha Önce Hiç bir sipariş yapmamışsınız <i class="fa fa-frown-o" aria-hidden="true"></i><span>Sipariş Yapmanın tam zamanı... </span></h1>

                                                <div class="col-md-4 checkout-left-basket" style="text-align:center; margin-left:300px">
                                                    <h4><a href="/Urun/Index"><i class="fa fa-shopping-cart"> </i>    Sipariş Yapmak İçin Tıklayınız...</a></h4>



                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        }
                        <table class="timetable_sub">
                            <thead>
                                <tr>

                                    <th><img src="~/Content/Resimler/Kullanici/menu.png" style="margin-top:-2px" />Sipariş Id</th>
                                    <th> <img src="~/Content/Resimler/Kullanici/zoom-in.png" />Siparişi Veren Kullanıcı Adı</th>
                                    <th><img src="~/Content/Resimler/Kullanici/counting.png" style="margin-top:-2px" /> Sipariş Tarih</th>
                                    <th><img src="~/Content/Resimler/Kullanici/jigsaw.png" /> Sipariş Teslim Tarih</th>
                                    <th><img src="~/Content/Resimler/Kullanici/name.png" style="margin-top:-2px" />Sipariş Toplam Fiyat</th>
                                    <th><img src="~/Content/Resimler/Kullanici/tag.png" style="margin-top:-2px" />Talep Oluştur</th>

                                    @*<th>Kargo Firması</th>
                                        <th>Odeme Tipi</th>
                                        <th>Siparis Durum</th>*@

                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr class="rem1">

                                        <td class="invert" style="width:100px">@item.siparisId</td>


                                        <td class="invert" style="width:100px">@item.Kullanici.kullaniciAd</td>

                                        <td class="invert">@item.siparisTarih</td>
                                        @if (item.SiparisTeslimTarih == null)
                                        {
                                            <td class="invert">
                                                Teslim Edilmemiştir.
                                            </td>

                                        }
                                        else
                                        {
                                            <td class="invert">
                                                @item.SiparisTeslimTarih
                                            </td>
                                        }

                                        <td class="invert">@(item.toplamFiyat.ToString().Substring(0, 6))  <b>TL</b></td>
                                        <td>
                                            <a title="SiparisDetay" class="btn btn-warning" href="/Kullanici/UrunIadeForm/@item.siparisId?==siparisId">
                                                <i class="fa fa-address-book"></i>
                                            </a>
                                        </td>
                                        @*<td class="invert">@item.Siparis.Kargo.Ad</td>
                                            <td class="invert">@item.Siparis.OdemeTipi.odemeTipi1</td>
                                            <td class="invert">@item.Siparis.SiparisDurum.siparisDurum1</td>*@


                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- //top products -->
        </div>
    </section>
    <script src="~/Content/Tema1/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/Tema1/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Tema1/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/Tema1/plugins/datatables/dataTables.bootstrap4.js"></script>
    <!-- SlimScroll -->
    <script src="~/Content/Tema1/plugins/slimScroll/jquery.slimscroll.min.js"></script>
</body>
</html>